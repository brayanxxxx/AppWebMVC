
@model List<WebAppProductsandCategories.Models.Client>

@{
    ViewData["Title"] = "Clientes";
}

<h2 class="mb-4">Listado de Clientes</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Nuevo Cliente</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Documento</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.ClientId</td>
                <td>@client.Name</td>
                <td>@client.Document</td>
                <td>@client.Address</td>
                <td>@client.Phone</td>
                <td>@client.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
