@model WebAppProductsandCategories.Models.Client

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2>¿Estás seguro de eliminar este cliente?</h2>

<div class="card p-3 mt-3">
    <p><strong>Nombre:</strong> @Model.Name</p>
    <p><strong>Documento:</strong> @Model.Document</p>
    <p><strong>Dirección:</strong> @Model.Address</p>
    <p><strong>Teléfono:</strong> @Model.Phone</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="ClientId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
